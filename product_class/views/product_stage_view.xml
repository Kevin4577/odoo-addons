<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_stage_tree_view" model="ir.ui.view">
        <field name="name">product.stage.tree</field>
        <field name="model">product.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="product_stage_form_view" model="ir.ui.view">
        <field name="name">product.stage.form</field>
        <field name="model">product.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="4" col="4">
                        <field name="name" required="1"/>
                        <field name="code" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_stage_search_view" model="ir.ui.view">
        <field name="name">product.stage.search</field>
        <field name="model">product.stage</field>
        <field name="arch" type="xml">
            <search >
                <field name="name" />
                <field name="code"/>
                <group expand="0" string="Group By" name="groupby">
                    <filter string="Name" domain="[]"
                        context="{'group_by':'name'}" />
                    <filter string="Code" domain="[]"
                        context="{'group_by':'code'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_product_stage_form" model="ir.actions.act_window">
        <field name="name">Product Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.stage</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_stage_tree_view"/>
        <field name="search_view_id" ref="product_stage_search_view"/>
    </record>

    <menuitem id="menu_product_stage_config"
              action="action_product_stage_form"
              parent="product_class.menu_product_assortment_config"
              sequence="1" />

</odoo>
