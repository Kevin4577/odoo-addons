<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_fulfillment_line_tree" model="ir.ui.view">
        <field name="name">view.order.fulfillment.line.tree</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_reference" />
                <field name="order_partner_id"/>
                <field name="customer_order_reference" />
                <field name="sale_order_reference" />
                <field name="product_reference"/>
                <field name="product_class" />
                <field name="product_id" />
                <field name="product_uom_qty"/>
                <field name="currency_id" />
                <field name="price_unit" />
                <field name="price_subtotal"/>
                <field name="qty_delivered" />
                <field name="price_delivery" />
                <field name="qty_to_delivery"/>
                <field name="price_to_delivery" />
                <field name="qty_to_invoice" />
                <field name="price_to_invoice"/>
                <field name="qty_invoiced" />
                <field name="price_invoiced" />
                <field name="price_to_payment"/>
                <field name="price_payment" />
            </tree>
        </field>
    </record>

    <record id="view_order_fulfillment_line_filter" model="ir.ui.view">
        <field name="name">view.order.fulfillment.line.filter</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <search >
                <field name="product_id" />
                <field name="order_partner_id" />
                <field name="last_update_year" />
                <group expand="0" string="Group By" name="groupby">
                    <filter string="Sale Order" domain="[]"
                            context="{'group_by':'order_id'}" />
                    <filter string="Product" domain="[]"
                            context="{'group_by':'product_id'}" />
                    <filter string="Customer" domain="[]"
                            context="{'group_by':'order_partner_id'}" />
                    <filter string="Last Update Year" domain="[]"
                            context="{'group_by':'last_update_year'}" />
                    <filter string="Current Year" name='current_year'
                            domain="[('last_update_year','=', datetime.datetime.now().strftime('%Y'))]" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_sale_order_fulfillment_report" model="ir.actions.act_window">
        <field name="name">Order Fulfillment Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_order_fulfillment_line_tree"/>
        <field name="search_view_id" ref="view_order_fulfillment_line_filter"/>
        <field name="context">{'group_by_order_id':1, 'search_default_current_year': 1}</field>
    </record>

    <menuitem id="menu_report_sale_order_fulfillment"
              action="action_sale_order_fulfillment_report"
              parent="sales_team.menu_sale_report"
              sequence="11"/>

</odoo>
