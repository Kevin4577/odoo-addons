<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="local_py3o_server" model="py3o.server">
        <field name="url">http://localhost:8765/form</field>
    </record>

    <record id="trading_vendor_bill_request_py3o" model="ir.actions.report.xml">
        <field name="name">Trading Vendor Bill Request</field>
        <field name="type">ir.actions.report.xml</field>
        <field name="model">account.invoice</field>
        <field name="report_name">Trading Vendor Bill Request</field>
        <field name="report_type">py3o</field>
        <field name="py3o_filetype">ods</field>
        <field name="py3o_server_id" ref="local_py3o_server"/>
        <field name="module">trading_vendor_bill_request</field>
        <field name="py3o_template_fallback">report/bill_request_template.ods</field>
    </record>

    <record id="trading_vendor_bill_request_py3o_print_action" model="ir.values">
        <field eval="'action'" name="key" />
        <field eval="'client_print_multi'" name="key2" />
        <field name="model">account.invoice</field>
        <field name="name">Trading Vendor Bill Request</field>
        <field eval="'ir.actions.report.xml,'+str(trading_vendor_bill_request_py3o)" name="value"/>
    </record>

</odoo>
