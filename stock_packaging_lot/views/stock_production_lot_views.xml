<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="carton_no"/>
                <field name="carton_qty"/>
                <field name="qty_per_carton"/>
                <field name="gross_by_carton"/>
                <field name="net_by_carton"/>
                <field name="volume_by_carton"/>
            </field>
            <xpath expr="//group[@name='main_group']" position="inside">
                <group>
                    <field name="box_per_carton"/>
                    <field name="qty_per_box"/>
                    <field name="gross_weight"/>
                    <field name="net_weight"/>
                    <field name="volume"/>
                    <field name="carton_size"/>
                    <field name="shipping_mark"/>
                    <field name="mix_loading"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
